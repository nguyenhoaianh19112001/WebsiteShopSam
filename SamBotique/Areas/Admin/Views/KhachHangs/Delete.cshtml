@model SamBotique.Models.KhachHang

@{
    ViewBag.Title = "Xóa Khách Hàng";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="form-horizontal">
        <h4 class="TT">Khách Hàng</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @*@Html.DisplayNameFor(model => model.TenKH)*@
                Tên Khách Hàng
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenKH)
            </dd>

            <dt>
                @*@Html.DisplayNameFor(model => model.DiaChi)*@
                Địa Chỉ
            </dt>

            <dd>
                @Html.DisplayFor(model => model.DiaChi)
            </dd>

            <dt>
                @*@Html.DisplayNameFor(model => model.SDT)*@
                Số Điện Thoại
            </dt>

            <dd>
                @Html.DisplayFor(model => model.SDT)
            </dd>

            <dt>
                @*@Html.DisplayNameFor(model => model.TenTK)*@
                Tên Tài Khoản
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenTK)
            </dd>

            <dt>
                @*@Html.DisplayNameFor(model => model.MK)*@
                Mật Khẩu
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MK)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Quay Lại", "Index")
            </div>
        }
    </div>

    <style>
        .content-wrapper h2, h3 {
            position: relative;
            left: 17px;
        }

        .TT {
            width: 126px;
            height: 41px;
            box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
            padding-top: 10px;
            padding-left: 20px;
            border-radius: 3px;
            margin-left: 18px;
        }
    </style>
