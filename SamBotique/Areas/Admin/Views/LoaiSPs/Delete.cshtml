@model SamBotique.Models.LoaiSP

@{
    ViewBag.Title = "Xóa Loại Sản Phẩm";
    Layout = "~/Areas/Admin/Views/Shared/_Layout.cshtml";
}

<h2>Xóa</h2>

<h3>Are you sure you want to delete this?</h3>
<div>
    <div class="form-horizontal">
        <h4 class="TT">Loại Sản Phẩm</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @*@Html.DisplayNameFor(model => model.MaLSP)*@
                Mã Loại Sản Phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.MaLSP)
            </dd>
            <dt>
                @*@Html.DisplayNameFor(model => model.TenLSP)*@
                Tên Loại Sản Phẩm
            </dt>

            <dd>
                @Html.DisplayFor(model => model.TenLSP)
            </dd>

        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-actions no-color">
                <input type="submit" value="Delete" class="btn btn-default" /> |
                @Html.ActionLink("Quay Lại", "Index")
            </div>
        }
    </div>
    <style>
        .content-wrapper h2,h3 {
            position: relative;
            left: 17px;
        }

        .TT {
            width: 157px;
            height: 41px;
            box-shadow: 0 4px 8px 0 rgb(0 0 0 / 20%), 0 6px 20px 0 rgb(0 0 0 / 19%);
            padding-top: 10px;
            padding-left: 23px;
            border-radius: 3px;
            margin-left: 18px;
        }
    </style>
